<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<VBox fx:controller="controller.UniversityController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"  spacing="10"
          styleClass="root">

    <HBox alignment="center" spacing="10"  styleClass="heading">
    <ImageView>
        <image>
            <Image url="/res/logo.png"/>
        </image>
    </ImageView>
        <Label text="Timetable System"/>
    </HBox>
    <ListView fx:id="studentsLv">
        <placeholder>
            <Label text="no students"/>
        </placeholder>
    </ListView>
    <HBox alignment="center" spacing="10" styleClass="footer">
        <Button text="Add Student"/>
        <Button text="Remove Student" disable="true"/>
        <Button text="Login" disable="true"/>
    </HBox>
</VBox>
